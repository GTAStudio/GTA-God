{
  "log": {
    "level": "info",
    "timestamp": true
  },
  "inbounds": [
    {
      "type": "anytls",
      "listen": "::",
      "listen_port": {{ANYTLS_PORT}},
      "users": [
        {
          "name": "{{ANYTLS_USER}}",
          "password": "{{ANYTLS_PASSWORD}}"
        }
      ],
      "padding_scheme": [
        "stop=8",
        "0=30-30",
        "1=100-400",
        "2=400-500,c,500-1000,c,500-1000,c,500-1000,c,500-1000",
        "3=9-9,500-1000",
        "4=500-1000",
        "5=500-1000",
        "6=500-1000",
        "7=500-1000"
      ],
      "tls": {
        "enabled": true,
        "server_name": "{{ANYTLS_SNI}}",
        "certificate_path": "/data/caddy/certificates/acme-v02.api.letsencrypt.org-directory/wildcard_.{{DOMAIN}}/wildcard_.{{DOMAIN}}.crt",
        "key_path": "/data/caddy/certificates/acme-v02.api.letsencrypt.org-directory/wildcard_.{{DOMAIN}}/wildcard_.{{DOMAIN}}.key"
      }
    }
  ]
}
